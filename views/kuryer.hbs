        {{@key}} ({{this.zakazlar.length}})
    </button>
    <div id="kuryer{{@index}}" class="collapse mt-2">
        <table class="table table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Ism</th>
                    <th>Miqdor</th>
                    <th>Lokatsiya</th>
                    <th>Holat</th>
                    <th>Harakatlar</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.zakazlar}}
                <tr>
                    <td>{{this.ism}}</td>
                    <td>{{this.miqdor}}</td>
                    <td>{{this.lokatsiya}}</td>
                    <td><span class="badge bg-warning text-dark">Jarayonda</span></td>
